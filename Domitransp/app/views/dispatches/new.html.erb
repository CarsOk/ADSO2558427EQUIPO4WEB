
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2> Crear ruta </h2>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/"> Inicio </a>
        </li>
        <li class="breadcrumb-item">
            <a href="<%= dispatches_path %>"> 
            Rutas </a>
        </li>
        
        <li class="breadcrumb-item">
            <a href="#">
                <strong> Nueva ruta </strong>
            </a>
        </li>
    </ol>
  </div>
</div>

<br>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox ">
      <div class="ibox-title">
          <h5> Crear ruta </h5>
      </div>
    <div class="ibox-content">
      <%= simple_form_for @dispatch, local: true do |form| %>
        <%= form.input :ruta, label: "Ruta" %>
        
        <%= form.input :horario, as: :string, input_html: { class: 'form-control', type: 'time', value: '10:05 AM' }, label: "Horario" %>
            
        
        <%= form.input :switch, as: :boolean, label: "Estado", input_html: { class: 'form-check-input'} %>
  
                
        
        <%= form.submit "Crear Ruta", class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
