        <a href="#">
          <strong> Nueva ruta </strong>
        </a>
      </li>
    </ol>
  </div>
</div>

<br>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-title">
        <h5>Crear ruta</h5>
      </div>
      <div class="ibox-content">
        <%= simple_form_for @dispatch, local: true do |form| %>
          <div class="form-group row">
            <%= form.label :origen, class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
              <%= form.input :origen, as: :select, collection: Dispatch::CIUDADES, prompt: 'Selecciona una ciudad', input_html: { class: 'form-control select-tamaÃ±o' } %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= form.label :destino, class: 'col-sm-2 col-form-label' %>
            <div class="col-sm-10">
              <%= form.input :destino, as: :select, collection: Dispatch::CIUDADES, prompt: 'Selecciona una ciudad', input_html: { class: 'form-control select-tamaÃ±o' } %>
            </div>
          </div>
  
          <%= form.input :horario, as: :string, input_html: { class: 'form-control', type: 'time', value: '10:05 AM' }, label: 'Horario' %>
          <%= form.input :switch, as: :boolean, label: 'Disponible', input_html: { class: 'form-check-input' } %>
                
          <%= form.submit 'Crear Ruta', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
