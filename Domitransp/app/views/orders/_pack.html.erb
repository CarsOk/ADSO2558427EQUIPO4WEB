  <div class="contenedor-paquete"> 
    <div class="contenedor-input-anidado">
      <label class="label-anidado">Tipo: </label>
      <%= f.input :tipo, as: :select, collection: ['Sobre', 'Paquete', 'Cava', 'Caja', 'Maleta', 'Contenedor'], prompt: 'Selecciona un empaque', input_html: { class: 'form-control select-tamaÃ±o', id: 'my-select' }, label: false, wrapper: false %>
    </div>
    <div class="contenedor-input-anidado">
      <label class="label-anidado label-cantidad">Cantidad: </label>
      <%= f.input :cantidad, label: false, input_html: { id: 'input-anidado-cantidad' }, wrapper: false %>
