                        <a xlink:href="<%= url_for(controller: 'orders', action: 'export_to_excel', format: 'xlsx', consecutivo: params[:consecutivo], fecha_desde: params[:fecha_desde], fecha_hasta: params[:fecha_hasta]) %>" download="ordenes.xlsx">
