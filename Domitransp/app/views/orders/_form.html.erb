<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<div class="row">
  <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <h5>Programar una orden <small>Rellene los campos correctamente.</small></h5>
          
        </div>
        <div class="ibox-content">
          <%= simple_form_for(@order) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Seleccionar fecha: </label>
              <%= f.input :fecha, label: false %>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Digitar consecutivo: </label>
              <%= f.input :consecutivo, label: false %>
            </div>
            <div>
              <h4>Empaque</h4>
              <div class='fields'>
              <%= f.simple_fields_for :packs do |builder| %>
                <%= render 'pack', f: builder %>
              <% end %>
              </div>
              <div class="form-group row">
                <div class="col-sm-4 col-sm-offset-2">
                <%= link_to_add_row('Agregar empaque', f, :packs, class: 'btn btn-primary') %>
              </div>    
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Descripcion: </label>
              <%= f.association :description, label_method: :objeto, label: false%>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label"> Ciudad Origen: </label>
              <%= f.association :beginning, label_method: :ciudad, label: false %>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label"> Ciudad destino: </label>
              <%= f.association :destination ,label_method: :ciudad, label: false %>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group row">
              <%= f.input :avatar, label: false%>
            </div>
            
            <div class="form-group row">
              <div class="col-sm-4 col-sm-offset-2">
                <%= f.button :submit, class:'btn btn-primary btn-sm' %>
              </div>
            </div>           
          <%end%>
        </div>
      </div>
  </div>
</div>