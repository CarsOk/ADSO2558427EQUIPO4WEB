
<div class="row">
  <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <h5>Programar una orden <small>Rellene los campos correctamente.</small></h5>
          
        </div>
        <div class="ibox-content">
          <%= simple_form_for(@order) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Seleccionar fecha: </label>
              <%= f.input :fecha, class: 'form-control', label: false %>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Digitar consecutivo: </label>
              <%= f.input :consecutivo, class: 'form-control', label: false %>
            </div>
            <div class="form-group row"><label class="col-sm-2 col-form-label">Descripcion</label>

              <div class="col-sm-10">
                <div class="col-lg-4 m-l-n">
                  <%= f.association :description, label_method: :objeto, class:'form-control m-b', label: false%>
                </div>
              </div> 
            </div>
            
            <div class="form-group row">
              <label class="col-sm-2 col-form-label"> Ciudad destino: </label>
              <%= f.association :beginning, label_method: :ciudad, class: 'form-control', label: false %>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label"> Ciudad destino: </label>
              <%= f.association :destination ,label_method: :ciudad, class: 'form-control', label: false %>
            </div>
            <div class="form-group row">
              <div class="col-sm-4 col-sm-offset-2">
                <%= f.button :submit, class:'btn btn-primary btn-sm' %>
                
              </div>
            </div>
                                
          <%end%>
        </div>
      </div>
  </div>
</div>



