<div class="row">

    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5> Empresas </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    
                    
                    
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <%= simple_form_for :filter, url: companies_path, method: :get, class: "filter-form" do |f| %>
                        
                    
                        <%= f.input :company_id, 
                            collection: @empresas, 
                            as: :select, 
                            prompt: "Todas las empresas", 
                            label: false, 
                            input_html: { class: "form-control-sm form-control input-s-sm inline" },
                            label_method: lambda { |company| "#{company.razon_social} - #{company.nit}" }, 
                            value_method: :id            
                        %>

                        <%= f.submit "Filtrar", class: "btn btn-primary" %>
                    <% end %>
                </div>
                    
                    
                
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            
                            <th> Razon Social </th>
                            <th> NIT </th>
                            <th> Usuarios </th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <% @companies.each do |company| %>
                                    <tr>
                                        <td><%= company.razon_social %></td>
                                        <td><%= company.nit %></td>
                                        <td><%= company.user_count %></td>
                                    </tr>
                                <% end %>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>