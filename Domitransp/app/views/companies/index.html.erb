<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2> Empresas </h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/"> Inicio </a>
            </li>
            <li class="breadcrumb-item">
                <a href="<%= companies_path %>">
                    <strong> Empresas </strong>
                </a>
            </li>
        </ol>
    </div>
</div>
<br>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5> Empresas </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <%= render 'filter' %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                
                                <th> Razon Social </th>
                                <th> NIT </th>
                                <th> Usuarios </th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <% @companies.each do |company| %>
                                        <tr>
                                            <td><%= company.razon_social %></td>
                                            <td><%= company.nit %></td>
                                            <td> 
                                                <%= company.users_count %>
                                            </td>
                                            <td style="min-width: 10px;">
                                                <%= link_to "Ver Usuarios", company_users_path(company), class: "btn-primary btn-sm .ms-2", style: "margin-right    : 10px;" %>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>