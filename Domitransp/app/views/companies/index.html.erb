<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2> Usuarios </h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/"> Inicio </a>
            </li>
            <li class="breadcrumb-item">
                Empresas
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5> Empresas </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    
                    
                    
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <%= render 'filter' %>
                </div>
                    
                    
                
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            
                            <th> Razon Social </th>
                            <th> NIT </th>
                            <th> Usuarios </th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <% @companies.each do |company| %>
                                    <tr>
                                        <td><%= company.razon_social %></td>
                                        <td><%= company.nit %></td>
                                        <td><%= company.user_count %></td>
                                    </tr>
                                <% end %>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>