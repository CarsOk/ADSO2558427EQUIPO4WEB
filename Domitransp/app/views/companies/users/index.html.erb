<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2> Usuarios </h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/"> Inicio </a>
            </li>
            <li class="breadcrumb-item">
                <%= link_to @company.razon_social, companies_path %>
            </li>
            <li class="breadcrumb-item active">
                <a href="<%= company_users_path(@company) %>"><strong> Usuarios </strong></a>
            </li>
        </ol>
    </div>
</div>
<br>

<div class="row">
    <div class="col-lg-12">
        <div class="contact-box">
            <div class="row">
                
                <% @users.each do |users| %>
                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-5">
                                <div class="text-center">
                                    <img alt="Imagen no cargada" class="rounded-circle m-t-xs img-fluid" src="<%=users.avatar%>" >
                                    
                                </div>
                            </div>
                            <div class="col-7">
                                <h3><strong><%=users.nombre + ' ' + users.apellido %></strong></h3>
                                <address>
                                    <strong><%= users.email %></strong><br>
                                    795 Folsom Ave, Suite 600<br>
                                    San Francisco, CA 94107<br>
                                    <abbr title="Phone">P:</abbr> (123) 456-7890
                                </address>
                            </div>
                        </div>
                    </div>
                <%end%>
                
            </div>
        </div>
    </div>
    
</div>
<div class="create-user-button">
  <%= link_to 'Crear nuevo usuario', new_company_user_path, class: 'btn btn-primary' %>
</div>
<br><br><br>