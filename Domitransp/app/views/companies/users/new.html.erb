<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2> Crear usuarios</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/"> Inicio </a>
            </li>
            <li class="breadcrumb-item">
                <%= link_to @company.razon_social, companies_path %>
            </li>
            <li class="breadcrumb-item active">
                <a href="<%= company_users_path(@company) %>"> Usuarios </a>
            </li>
            <li class="breadcrumb-item">
                <a href="#"><strong> Crear usuario </strong> </a> 
            </li>
        </ol>
    </div>
</div>
<br>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
            <h5>Crea un usuario <small>Rellene los campos correctamente.</small></h5>
        
        </div>
        <div class="ibox-content">
            <h5> Informaci칩n de acceso </h5>
            <div class="hr-line-dashed"></div>

            <%= simple_form_for([@company, @user]) do |f| %>
                <%= f.error_notification %>
                <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email: </label>
                    <%= f.input :email, label:false%>                
                </div>
                
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"> Contrase침a </label>
                    <%= f.input :password, label: false %>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"> Confirmar contrase침a </label>
                    <%= f.input :password_confirmation, label: false %>
                </div>
                <div class="hr-line-dashed"></div>
                <h5> Informaci칩n personal </h5>
                <div class="hr-line-dashed"></div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label"> Nombre: </label>
                            <%= f.input :nombre, label:false%>

                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label"> Apellido </label>
                            <%= f.input :apellido, label:false%>
                            
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="d-flex justify-content-center mb-4">
                            <img src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
                            class="rounded-circle" alt="example placeholder" style="width: 200px;" />
                        </div>
                        <div class="d-flex justify-content-center">
                            <label class="btn btn-primary btn-rounded">
                            <span class="form-label text-white m-1">Elegir imagen</span>
                            <%= f.input_field :avatar, class: 'form-control d-none', label: false %>
                            </label>
                        </div>
                    </div>
                </div>
                <%= f.button :submit, class:'btn btn-primary' %>
            <% end %>
        </div>
        
    </div>
</div>
