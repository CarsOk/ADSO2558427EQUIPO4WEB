
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-outline mb-4">
    <%= f.input :email,
    required: false,
    autofocus: true,
    label: false,
    input_html: { 
    class: "form-control form-control-lg", 
    autocomplete: "email",
    placeholder: "Ingrese su correo electrónico" } %>    
  </div>
  <div class="form-outline mb-4">
    <%= f.input :password,
    required: false,
    label: false,
    input_html: { 
      class: "form-control form-control-lg",
      autocomplete: "current-password",
      placeholder: "Ingrese su contraseña" } %>
  </div>

  <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            
            <%= f.input :remember_me, as: :boolean, input_html: {class:"form-check-input"} if devise_mapping.rememberable? %>
            
            
  </div>
  
  <div class="d-flex justify-content-center">
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg btn-block" %>
    
  </div>
  <p class="small mb-5 pb-lg-2"><%= render "devise/shared/links" %></p>
  
<% end %>
