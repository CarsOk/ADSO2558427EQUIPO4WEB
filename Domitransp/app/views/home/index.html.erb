<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-6">
      <div class="ibox">
        <div class="ibox-title">
          <div class="ibox-tools">
            <span class="label label-success float-right">Monthly</span>
          </div>
          <h5>Income</h5>
        </div>
        <div class="ibox-content">
          <h1 class="no-margins">40 886,200</h1>
          <div class="stat-percent font-bold text-success">98% <i class="fa fa-bolt"></i></div>
          <small>Total income</small>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="ibox">
        <div class="ibox-title">
          <div class="ibox-tools">
            <span class="label label-info float-right"> Hoy </span>
          </div>
          <h5>Envios </h5>
        </div>
        <div class="ibox-content">
          <% if policy(current_user).admin? %>
            <% @contador = 0 %>
            <% if @orders.present? %>
              <% @orders.each do |order| %>
                <% @contador = @contador + 1 %>
              <% end %>
              <h1 class="no-margins"><%= @contador %></h1>
              <small> <%= link_to "Ver envios", orders_path %> </small>
            <% else %>
              <h1 class="no-margins">No hay envíos</h1>
            <% end %>
          <% else %>
            <% if @orders&.id %>
              <h1 class="no-margins"><%= @orders.id %></h1>
            <% else %>
              <h1 class="no-margins">0</h1>
            <% end %>
            <div class="stat-percent font-bold text-info">20% <i class="fa fa-level-up"></i></div>
            <small> <%= link_to "Programar envio", new_order_path %> </small>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-12">
    <div class="ibox-content table-responsive">
      <table class="table table-hover no-margins">
        <thead>
          <tr>
            <th>Estado</th>
            <th>Consecutivo</th>
            <th>Fecha</th>
            <th>Origen</th>
            <th>Destino</th>
          </tr>
        </thead>
        <tbody>
          <% if @pendientes.present? %>
            <% @pendientes.each do |order| %>
              <tr>
                <td><span class="label label-warning"><%= order.estado %></span></td>
                <td><%= link_to order.consecutivo, order_path(order) %></td>
                <td><i class="fa calendar"></i><%= order.fecha %></td>
                <td><%= order.origen %></td>
                <td><%= order.destino %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-lg-12 arriba">
    <div class="ibox">
      <div class="ibox-title">
        <h5>Rutas</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content table-responsive">
        <div class="row">
          <div class="col-lg-6">
            <table class="table table-hover no-margins">
              <thead>
                <tr>
                  <th>Ruta</th>
                  <th>Horario</th>
                  <th>Estado</th>
                </tr>
              </thead>
              <tbody>
                <% @dispatches.each do |dispatch| %>
                  <% if dispatch.switch %>
                    <tr>
                      <td><%= dispatch.ruta %></td>
                      <td><%= dispatch.horario.strftime('%I:%M%p') %></td>
                      <td><span class="label label-success">Disponible</span></td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>         
          <div class="col-lg-6">
            <table class="table table-hover no-margins">
              <thead>
                <tr>
                  <th>Horario</th>
                  <th>Ruta </th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><i class="fa fa-clock-o"></i> 12:00pm</td>
                  <td>Barranquilla - Santa Marta</td>
                </tr>
                <tr>
                  <td><i class="fa fa-clock-o"></i> 12:00pm</td>
                  <td>Barranquilla - Cartagena</td>
                </tr>
                <!-- Aquí puedes agregar más filas de rutas -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
