<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2> Facturas </h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/"> Inicio </a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">
                    <% if current_user.admin %>
                        <strong> Mis facturas </strong>
                    <% else %>
                        <strong> Ver facturas </strong>
                    <% end %>
                </a>
            </li>
        </ol>
    </div>
</div>
<br>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5> Filtrar facturas  </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                
                    
                <%= form_with(url: invoices_path, method: "get") do %>
                    <% if current_user.admin? %>
                        <div class="form-group">
                            <%= label_tag(:q, "Buscar empresa:") %>
                            <%= text_field_tag(:q, params[:q], class: 'form-control input-lg') %>
                        </div>
                    <% else %>
                        <div class="form-group">
                            <%= text_field_tag(:numero_factura, params[:numero_factura], placeholder: "Buscar por número de factura", class: 'form-control input-lg') %>
                        </div>
                    <% end %>
                
                    <div class="btn-group">
                        <%= submit_tag("Filtrar", class: 'btn btn-primary btn-sm', style: 'margin: 10px 10px 0;') %>
                        <%= button_to("Restablecer", invoices_path(q: nil, numero_factura: nil), method: :get, class: 'btn btn-secondary btn-sm', style: 'margin: 10px 0 0 10px;') %>
                    </div>
                <% end %>
                    
                    
                
                <div class="table-responsive">
                    <table class="table table-striped text-center">
                        <thead>
                            <tr>
                                <th> Numero de factura </th>
                                <th> Mes facturado </th>
                                <th> Factura </th>
                                <th> Certificacion </th>
                                <% if current_user.admin %>
                                    <th> Empresa </th>
                                <% end %>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <% @invoices.each do |invoice| %>
                                    <tr>
                                        <td><%= invoice.numero_factura %></td>
                                        <td><%= invoice.mes_factura %></td>
                                        <td><%= link_to 'Ver Factura', invoice.factura.url, target: '_blank' if invoice.factura? %></td>
                                        <td><%= link_to 'Ver Certificación', invoice.certificacion.url, target: '_blank' if invoice.certificacion? %></td>
                                        <% if current_user.admin %>
                                            <td><%= invoice.company.razon_social %></td>
                                        
                                            <td>
                                                <%= button_to 'Eliminar', invoice_path(invoice), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %>
                                            </td>
                                        <% end %>
                                    </tr>
                                <% end %>
                            </tr>                   
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>